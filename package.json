{
    "name": "react-server-boilerplate",
    "fileName": "react-server-boilerplate",
    "description": "node-react server setup",
    "version": "0.0.0",
    "main": "server.js",
    "author": "Ryan Walker <ryanprestonwalker@gmail.com>",
    "license": "UNLICENSED",
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/RyanPWalker/react-server-boilerplate.git"
    },
    "keywords": [
        "Ryan Preston Walker",
        "Ryan Walker",
        "FED",
        "Front End Developer",
        "React",
        "JavaScript",
        "Web Developer"
    ],
    "scripts": {
        "bounce": "rm -rf /node_modules && yarn",
        "build": "webpack --config webpack.config.js --progress",
        "build:prod": "webpack --config webpack.config.prod.js --progress",
        "dev": "rm -rf dist && yarn build && cp ./src/local/index.dev.html dist/ && concurrently -n 'server,client' -c 'bgBlue.bold,bgGreen.bold' 'yarn run:server' 'webpack --watch'",
        "dev:prod": "rm -rf dist && yarn build:prod && cp ./src/local/index.html dist/ && concurrently -n 'server,client' -c 'bgBlue.bold,bgGreen.bold' 'yarn run:prodServer' 'webpack --watch'",
        "run:server": "nodemon -e js,html --watch dist --ignore dist/client.js ./dist/server.js",
        "deploy": "source $HOME/.nvm/nvm.sh && nvm use && rm -rf ./node_modules && yarn && yarn build:prod",
        "analyze": "yarn build && yarn preAnalyze && webpack-bundle-analyzer webpack-build-log.json dist",
        "preAnalyze": "webpack -p --json --progress --profile > webpack-build-log.json",
        "lint": "eslint ./src --fix",
        "jest": "clear && jest --coverage",
        "test": "yarn lint && jest"
    },
    "nodemonConfig": {
        "delay": "750"
    },
    "config": {
        "startupFile": "dist/server.js",
        "port": 80,
        "devPort": 3000
    },
    "prepush": "test",
    "jest": {
        "globals": {}
    },
    "devDependencies": {
        "@babel/cli": "^7.6.0",
        "@babel/core": "^7.6.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-object-assign": "^7.2.0",
        "@babel/plugin-transform-react-inline-elements": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.6.0",
        "@babel/preset-env": "^7.6.0",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.3",
        "babel-jest": "^24.9.0",
        "babel-loader": "8.0.6",
        "babel-plugin-react-remove-prop-types": "^3.0.0",
        "babelify": "10.0.0",
        "concurrently": "^4.1.2",
        "css-loader": "^3.2.0",
        "eslint": "^6.4.0",
        "eslint-config-react-app": "^5.0.1",
        "eslint-loader": "^3.0.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-react": "^7.14.3",
        "extract-text-webpack-plugin": "^4.0.0-beta.0",
        "fs": "^0.0.1-security",
        "glob": "^7.1.4",
        "html-webpack-plugin": "3.2.0",
        "husky": "^3.0.5",
        "incstr": "^1.2.3",
        "inquirer": "^7.0.0",
        "jest": "^24.9.0",
        "less": "3.10.3",
        "less-loader": "^5.0.0",
        "mini-css-extract-plugin": "^0.8.0",
        "nodemon": "^1.19.2",
        "prop-types": "^15.7.2",
        "purgecss": "^1.4.0",
        "purgecss-webpack-plugin": "^1.6.0",
        "style-loader": "1.0.0",
        "uglifyjs-webpack-plugin": "2.2.0",
        "webpack": "4.40.2",
        "webpack-bundle-analyzer": "^3.5.0",
        "webpack-bundle-size-analyzer": "^3.0.0",
        "webpack-cli": "3.3.9",
        "webpack-common-shake": "^2.1.0",
        "webpack-dev-server": "3.8.1",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "csso-webpack-plugin": "^1.0.0-beta.12",
        "deep-get-set": "^1.1.0",
        "express": "^4.17.1",
        "path": "^0.12.7",
        "promise": "^8.0.3",
        "react": "^16.9.0",
        "react-dom": "^16.9.0",
        "react-hook-form": "^3.23.9",
        "react-redux": "7.1.1",
        "redux": "^4.0.1",
        "redux-promise-middleware": "^6.1.1",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0"
    }
}
